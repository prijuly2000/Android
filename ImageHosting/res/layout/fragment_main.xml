<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.titanium.imagehosting.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to the Image Hosting" />

    <Button
        android:id="@+id/btnGallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickGal"
        android:text="Upload From Gallery" />

    <Button
        android:id="@+id/btnCapture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickCap"
        android:text="Capture and Upload" />

    <Button
        android:id="@+id/btnDown"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickDown"
        android:text="Download" />

</LinearLayout>
